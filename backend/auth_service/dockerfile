# Dockerfile do auth_service
FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive

# Instala dependências do sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
        curl \
        gnupg \
        unixodbc \
        unixodbc-dev \
        libgssapi-krb5-2 \
        libssl-dev \
        libc6-dev \
        apt-transport-https \
    && rm -rf /var/lib/apt/lists/*

# Adiciona chave Microsoft
RUN curl https://packages.microsoft.com/keys/microsoft.asc \
    | gpg --dearmor \
    | tee /usr/share/keyrings/microsoft-prod.gpg > /dev/null

# Adiciona repositório Microsoft
RUN curl https://packages.microsoft.com/config/debian/12/prod.list \
    | tee /etc/apt/sources.list.d/mssql-release.list

# Instala driver ODBC 18 e ferramentas
RUN apt-get update && ACCEPT_EULA=Y apt-get install -y \
        msodbcsql18 \
        mssql-tools18 \
    && rm -rf /var/lib/apt/lists/*

# Adiciona mssql-tools ao PATH
ENV PATH="$PATH:/opt/mssql-tools18/bin"

# Define diretório de trabalho
WORKDIR /app

# Copia arquivos do projeto
COPY . .

# Instala dependências Python
RUN pip install --no-cache-dir -r requirements.txt

# Expõe porta do serviço
EXPOSE 8001

# Comando para rodar o FastAPI com hot reload
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]
